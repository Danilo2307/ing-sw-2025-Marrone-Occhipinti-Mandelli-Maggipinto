      </ImageView>
      <ScrollPane fx:id="uncoveredScrollPane" fitToHeight="true" layoutX="9.0" layoutY="8.0" prefHeight="126.0" prefWidth="927.0" styleClass="transparent-scrollpane" vbarPolicy="NEVER">
