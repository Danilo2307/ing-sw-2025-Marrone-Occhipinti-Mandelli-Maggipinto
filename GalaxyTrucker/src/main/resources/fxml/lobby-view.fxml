<AnchorPane prefHeight="600.0" prefWidth="960.0" stylesheets="@lobby-view.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.psp23.view.gui.guicontrollers.LobbyController">
   <children>
      <TextField fx:id="usernameField" managed="false" prefHeight="30.0" visible="false" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="280.0" />

      <Label fx:id="usernameLabel" alignment="CENTER" managed="false" text="Inserisci il tuo username:" textFill="WHITE" visible="false" AnchorPane.leftAnchor="150.0" AnchorPane.rightAnchor="150.0" AnchorPane.topAnchor="240.0">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font>
      </Label>

      <Button fx:id="done" managed="false" onAction="#onDoneClicked" prefHeight="30.0" styleClass="main-button" text="Fatto" visible="false" AnchorPane.leftAnchor="250.0" AnchorPane.rightAnchor="250.0" AnchorPane.topAnchor="330.0" />
      <Button fx:id="trialLevel" layoutX="227.0" layoutY="265.0" managed="false" minWidth="46.0" mnemonicParsing="false" onAction="#onTrialLevel" prefHeight="30.0" prefWidth="122.0" text="Volo di prova" visible="false" />
