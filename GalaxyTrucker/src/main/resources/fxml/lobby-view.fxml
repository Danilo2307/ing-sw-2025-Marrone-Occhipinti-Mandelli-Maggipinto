      </Button>
      <Button fx:id="threePlayersButton" layoutX="260.0" managed="false" mnemonicParsing="false" onAction="#onSelectThreePlayers" text="3 players" visible="false">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font>
      </Button>
      <Button fx:id="fourPlayersButton" layoutX="365.0" managed="false" mnemonicParsing="false" onAction="#onSelectFourPlayers" text="4 players" visible="false">
         <font>
            <Font name="Arial Black" size="13.0" />
         </font>
      </Button>
   </children>
